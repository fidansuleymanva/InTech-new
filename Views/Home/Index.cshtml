		<!-- HTML -->
		<a id="scrollToTop" href="#" class="scroll-to-top"><i class="fas fa-arrow-up"></i></a>
		<a id="scrollToBottom" href="#" class="scroll-to-bottom"><i class="fas fa-arrow-down"></i></a>

		<!-- JavaScript -->
		<script>
			// Yukarı kaydırma işlemi
			document.getElementById("scrollToTop").addEventListener("click", function(event) {
				event.preventDefault();
				window.scrollTo({ top: 0, behavior: 'smooth' });
			});

			// Aşağı kaydırma işlemi
			document.getElementById("scrollToBottom").addEventListener("click", function(event) {
				event.preventDefault();
				window.scrollTo({ top: document.documentElement.scrollHeight, behavior: 'smooth' });
			});

			// Yukarı ve aşağı kaydırma durumunu kontrol etme
			window.addEventListener("scroll", function() {
				var scrollPosition = window.pageYOffset || document.documentElement.scrollTop;
				var scrollToTop = document.getElementById("scrollToTop");
				var scrollToBottom = document.getElementById("scrollToBottom");

				// Yukarı kaydırma durumu
				if (scrollPosition > 200) {
					scrollToTop.style.display = "block";
				} else {
					scrollToTop.style.display = "none";
				}

				// Aşağı kaydırma durumu
				if (scrollPosition < (document.documentElement.scrollHeight - window.innerHeight - 200)) {
					scrollToBottom.style.display = "block";
				} else {
					scrollToBottom.style.display = "none";
				}

				// Sayfanın olduğu hisseye göre konumlandırma
				var pageLeft = 20; // Sol kenar boşluğu
				var pageCenter = window.innerHeight / 2;

				if (scrollPosition > pageCenter) {
					scrollToTop.style.top = pageLeft + "px";
					scrollToBottom.style.bottom = pageLeft + "px";
				} else {
					scrollToTop.style.top = "-100px";
					scrollToBottom.style.bottom = "-100px";
				}
			});
		</script>
